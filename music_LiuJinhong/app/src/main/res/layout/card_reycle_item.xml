<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_recycler_item"
    android:layout_width="320dp"
    android:layout_height="150dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    >

    <ImageView
        android:id="@+id/card_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="@drawable/tem_image_shape" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center|bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/card_item_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="泪桥"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/card_item_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陶喆"
                android:textSize="12sp"
                android:textColor="#B3FFFFFF"
                android:gravity="center"
                android:singleLine="true"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/card_item_add_music"
            android:layout_alignParentEnd="true"
            android:layout_width="14.72dp"
            android:layout_height="16.83dp"
            android:src="@drawable/add_music"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>