<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/double_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    >
    <TextView
        android:id="@+id/double_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="热门金曲"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            >
            <ImageView
                android:id="@+id/double_item_image1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@drawable/tem_image_shape"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center|bottom"

                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:id="@+id/double_item_song1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="泪桥"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:singleLine="true"
                        />
                    <TextView
                        android:id="@+id/double_item_singer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="陶喆"
                        android:textSize="12sp"
                        android:textColor="#B3FFFFFF"
                        android:gravity="center"
                        android:singleLine="true"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/double_item_add1"
                    android:layout_alignParentEnd="true"
                    android:layout_width="14.72dp"
                    android:layout_height="16.83dp"
                    android:src="@drawable/add_music"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="0dp"
            android:layout_weight="0.05"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            >
            <ImageView
                android:id="@+id/double_item_image2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@drawable/tem_image_shape"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center|bottom"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:id="@+id/double_item_song2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="泪桥"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:singleLine="true"
                        />
                    <TextView
                        android:id="@+id/double_item_singer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="陶喆"
                        android:textSize="12sp"
                        android:textColor="#B3FFFFFF"
                        android:gravity="center"
                        android:singleLine="true"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/double_item_add2"
                    android:layout_alignParentEnd="true"
                    android:layout_width="14.72dp"
                    android:layout_height="16.83dp"
                    android:src="@drawable/add_music"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>
